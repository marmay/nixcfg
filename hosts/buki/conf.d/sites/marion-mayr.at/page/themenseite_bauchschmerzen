<script>
var propagate = 1;

function make_visible( parentId, childId ) {
  var parentElement = document.getElementById( parentId );
  var childElement = document.getElementById( childId );
  childElement.style.display = 'block';
  parentElement.style.height = childElement.offsetHeight + 30;
}

function make_invisible( parentId, childId ) {
  var parentElement = document.getElementById( parentId );
  var childElement = document.getElementById( childId );
  childElement.style.display = 'none';
  parentElement.style.height = 30;
}

function toggle_visibility( parentId, childId ) {
  var parentElement = document.getElementById( parentId );
  var childElement = document.getElementById( childId );
  if( childElement.style.display === 'none' ) {
    childElement.style.display = 'block';
    parentElement.style.height = childElement.offsetHeight + 30;
  }
  else {
    childElement.style.display = 'none';
    parentElement.style.height = 30;
  }
}

function is_mobile() {
  return ! window.matchMedia( '(min-width: 1279px)' ).matches;
}

function on_menu_click() {
  if( is_mobile() )
  {
    make_invisible( "address", "address_details" );
    toggle_visibility( "menu", "main_menu" );
    propagate = 0;
  }
}

function on_address_click() {
  if( is_mobile() )
  {
    make_invisible( "menu", "main_menu" );
    toggle_visibility( "address", "address_details" );
    propagate = 0;
  }
}

function on_body_click() {
  if( is_mobile() && propagate )
  {
    make_invisible( "menu", "main_menu" );
    make_invisible( "address", "address_details" );
  }
  propagate = 1;
}

function same_size_list( elements, pd ) {
  // Ensures that all link boxes on the page have the same height.
  var maxHeight = 0;
  for( var i = 0; i < elements.length; ++i )
  {
    if( elements[ i ].clientHeight - pd > maxHeight )
    {
      maxHeight = elements[ i ].clientHeight - pd;
    }
  }
  for( var i = 0; i < elements.length; ++i )
  {
    elements[ i ].style.height = maxHeight + "px";
  }
}

function same_size_class( className, pd ) {
  same_size_list( document.getElementsByClassName( className ), pd );
}

function on_resize() {
  if( is_mobile() ) {
    make_invisible( "menu", "main_menu" );
    make_invisible( "address", "address_details" );
  }
  else {
    same_size_class( 'col', 0 );
    make_visible( "menu", "main_menu" );
    make_visible( "address", "address_details" );
  }
}
</script>
